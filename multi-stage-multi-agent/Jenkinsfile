pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        // Example: clean, run tests, and package (assuming a pom.xml exists)
        sh 'ls -la'
        sh 'mvn -B clean test'
        sh 'mvn -B package'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        // Example: install deps and run a simple build or test
        sh 'ls -la'
        sh 'node -e "console.log(`Hello from Node CI`)‚Äù'
        sh 'npm install'
        sh 'npm test || echo "No tests defined, skipping"'
      }
    }
  }
}
